#!/bin/bash
. /opt/remotepi/etc/config.sh

/opt/remotepi/bin/modeset-off

# Configure mixer
amixer -c$CARD set 'Speaker',0 ${PKT_SPKR}
amixer -c$CARD set 'Mic',0 ${PKT_MIC}

# Start rigctld
#/opt/remotepi/init/flrig-vnc.start
mkdir -p /opt/remotepi/logs/
cd /opt/remotepi/logs/
tmux new-session -s winlink -d
tmux send-keys "ardopc" C-m
tmux rename-window 'ardopc'
tmux new-window -n 'pat'
tmux send-keys "pat http" C-m
echo "* Winlink mode enabled!"
tmux attach-session -t winlink
